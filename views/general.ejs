<h1>Discussion Forum</h1>
<a href="/create">Create New Post</a>
<div class="all-posts">
  <% for (let i = 0; i < data.length; i++) { %>
  <div>
    <h2><%= data[i].title %></h2>
    <% let d = String(data[i].createdAt.getDate()).padStart(2, '0') %> <% let m
    = String(data[i].createdAt.getMonth() + 1).padStart(2, '0') %> <% let y =
    data[i].createdAt.getFullYear() %>
    <div class="article-1"><%= data[i].article.slice(0, 200) + "..." %></div>
    <div class="details-1">
      <% let x = `/blog/${data[i]._id}` %>
      <div class="username-1">By <%= data[i].username %></div>
      <div class="date-1">
        <%= d + '/' + m + '/' + y %> <%=
        data[i].createdAt.toUTCString().slice(16) %>
      </div>
    </div>
    <div class="read-div-1">
      <a href="<%= x %>">Read More</a>
    </div>
  </div>

  <% } %>
</div>
